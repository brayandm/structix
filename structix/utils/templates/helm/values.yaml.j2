replicaCount: {{ replica_count }}

image:
  repository: {{ image_repo }}
  tag: {{ image_tag }}
  pullPolicy: IfNotPresent

service:
  type: ClusterIP
  port: 80

container:
  port: {{ container_port }}

resources:
  enabled: {{ "true" if cpu or memory else "false" }}
  requests:
    {%- if memory %}
    memory: "{{ memory }}"
    {%- endif %}
    {%- if cpu %}
    cpu: "{{ cpu }}"
    {%- endif %}
  limits:
    {%- if memory %}
    memory: "{{ memory }}"
    {%- endif %}
    {%- if cpu %}
    cpu: "{{ cpu }}"
    {%- endif %}


db:
  enabled: {{ db_enabled | lower }}
  type: {{ db if db else "" }}
