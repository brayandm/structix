apiVersion: v1
kind: ConfigMap
metadata:
  name: grafana-pod-dashboard
  labels:
    grafana_dashboard: "1"
data:
  pod-resources.json: |
    {
      "id": null,
      "title": "Pod CPU & Memory",
      "schemaVersion": 16,
      "version": 1,
      "panels": [
        {
          "type": "graph",
          "title": "Memory Usage by Pod",
          "targets": [
            {
              "expr": "sum by(pod) (process_resident_memory_bytes{job=\"kubernetes-pods\"}) / 1024 / 1024",
              "legendFormat": "{{pod}}"
            }
          ]
        },
        {
          "type": "graph",
          "title": "CPU Usage by Pod",
          "targets": [
            {
              "expr": "sum by(pod) (rate(process_cpu_seconds_total{job=\"kubernetes-pods\"}[5m]))",
              "legendFormat": "{{pod}}"
            }
          ]
        }
      ]
    }
